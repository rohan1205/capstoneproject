<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />


  <title>Sign Up â€” App</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'system-ui', 'sans-serif'] }
        }
      }
    }
  </script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .glass-card {
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      background: rgba(255,255,255,.08);
      border: 1px solid rgba(255,255,255,.15);
    }
    .input-group { position: relative; }
    .input-group label {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255,255,255,.5);
      font-size: 0.9375rem;
      pointer-events: none;
      transition: all 0.25s ease;
    }
    .input-group input:focus ~ label,
    .input-group input:not(:placeholder-shown) ~ label {
      top: -10px;
      left: 12px;
      font-size: 0.75rem;
      color: #a78bfa;
      background: #0f0a1e;
      padding: 0 6px;
    }
    .input-group input::placeholder { color: transparent; }
    .glow-btn {
      background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      box-shadow: 0 0 24px rgba(99,102,241,.35);
      transition: all 0.3s ease;
    }
    .glow-btn:hover {
      box-shadow: 0 0 36px rgba(139,92,246,.5);
      transform: translateY(-2px);
    }
    .strength-bar { transition: width 0.3s ease, background 0.3s ease; }
    .strength-0 { width: 0; background: transparent; }
    .strength-1 { width: 25%; background: #ef4444; }
    .strength-2 { width: 50%; background: #f59e0b; }
    .strength-3 { width: 75%; background: #eab308; }
    .strength-4 { width: 100%; background: #22c55e; }
    .error-enter { animation: errorSlide 0.4s ease; }
    @keyframes errorSlide {
      from { opacity: 0; transform: translateY(-8px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .card-enter { animation: cardFade 0.5s ease; }
    @keyframes cardFade {
      from { opacity: 0; transform: translateY(20px) scale(0.98); }
      to { opacity: 1; transform: translateY(0) scale(1); }
    }
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-950 via-black to-purple-950 flex items-center justify-center p-4 py-8 font-sans">
  <div class="glass-card rounded-2xl p-8 sm:p-10 w-full max-w-md card-enter">
    <div class="text-center mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-white tracking-tight">App</h1>
      <p class="text-white/60 mt-1 text-sm">Create your account</p>
    </div>

    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
      <div class="mb-6 px-4 py-3 rounded-xl bg-red-500/20 border border-red-400/30 text-red-200 text-sm text-center error-enter" role="alert"><%= error %></div>
    <% } %>

    <form action="/signup" method="POST" id="signupForm" class="space-y-5">
      <div class="input-group">
        <input
          type="text"
          name="name"
          id="name"
          placeholder=" "
          required
          autocomplete="name"
          class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-200"
        />
        <label for="name">Full Name</label>
      </div>

      <div class="input-group">
        <input
          type="email"
          name="email"
          id="email"
          placeholder=" "
          required
          autocomplete="email"
          class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-200"
        />
        <label for="email">Email</label>
      </div>

      <div class="input-group relative">
        <input
          type="password"
          name="password"
          id="password"
          placeholder=" "
          required
          minlength="6"
          autocomplete="new-password"
          class="w-full px-4 py-3.5 pr-12 rounded-xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-200"
        />
        <label for="password">Password</label>
        <button type="button" id="togglePassword" class="absolute right-3 top-1/2 -translate-y-1/2 text-white/50 hover:text-white/80 focus:outline-none p-1 transition-colors rounded" aria-label="Toggle password visibility">
          <svg id="eyeOpen" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
          <svg id="eyeClosed" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878a4.5 4.5 0 106.262 6.262M4.031 11.117A8.959 8.959 0 003 12c0 4.478 2.943 8.268 7 9.543 3.947-1.192 7.26-3.408 9.542-7.187m-1.746-2.117A9.97 9.97 0 0112 5c4.478 0 8.268 2.943 9.542 7-.575 1.83-1.35 3.535-2.242 5.084"/></svg>
        </button>
      </div>
      <div class="mt-1 px-1">
        <div class="h-1.5 w-full rounded-full overflow-hidden bg-white/10">
          <span id="strengthBar" class="strength-bar strength-0 block h-full rounded-full"></span>
        </div>
        <p id="strengthText" class="text-xs text-white/40 mt-1.5">Password strength</p>
      </div>

      <div class="input-group relative">
        <input
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          placeholder=" "
          required
          autocomplete="new-password"
          class="w-full px-4 py-3.5 pr-12 rounded-xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-200"
        />
        <label for="confirmPassword">Confirm Password</label>
        <button type="button" id="toggleConfirm" class="absolute right-3 top-1/2 -translate-y-1/2 text-white/50 hover:text-white/80 focus:outline-none p-1 transition-colors rounded" aria-label="Toggle password visibility">
          <svg id="eyeOpen2" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
          <svg id="eyeClosed2" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878a4.5 4.5 0 106.262 6.262M4.031 11.117A8.959 8.959 0 003 12c0 4.478 2.943 8.268 7 9.543 3.947-1.192 7.26-3.408 9.542-7.187m-1.746-2.117A9.97 9.97 0 0112 5c4.478 0 8.268 2.943 9.542 7-.575 1.83-1.35 3.535-2.242 5.084"/></svg>
        </button>
      </div>
      <p id="matchText" class="text-xs text-white/40 hidden">Passwords must match</p>

      <button type="submit" class="glow-btn w-full py-3.5 rounded-xl text-white font-semibold text-base hover:opacity-95 active:scale-[0.98] transition-transform">
        Create Account
      </button>
    </form>

    <div class="flex items-center gap-4 my-6">
      <span class="flex-1 h-px bg-white/10"></span>
      <span class="text-white/40 text-xs">or</span>
      <span class="flex-1 h-px bg-white/10"></span>
    </div>

    <a href="/auth/google" class="block">
      <button type="button" class="w-full py-3.5 rounded-xl border border-white/15 bg-white/5 text-white/90 font-medium text-sm flex items-center justify-center gap-3 hover:bg-white/10 hover:border-white/20 transition-all duration-200">
        <svg class="w-5 h-5" viewBox="0 0 48 48"><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/><path fill="#FBBC05" d="M10.53 28.59a14.5 14.5 0 0 1 0-9.18l-7.98-6.19a24.06 24.06 0 0 0 0 21.56l7.98-6.19z"/><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/></svg>
        Continue with Google
      </button>
    </a>

    <p class="text-center mt-6 text-white/50 text-sm">
      Already have an account? <a href="/login" class="text-indigo-300 hover:text-indigo-200 font-medium transition-colors">Sign In</a>
    </p>
  </div>

  <script>
    (function() {
      function setupToggle(btnId, inputId, openId, closedId) {
        var toggle = document.getElementById(btnId);
        var input = document.getElementById(inputId);
        var eyeOpen = document.getElementById(openId);
        var eyeClosed = document.getElementById(closedId);
        if (!toggle || !input) return;
        toggle.addEventListener('click', function() {
          var isPass = input.type === 'password';
          input.type = isPass ? 'text' : 'password';
          eyeOpen.classList.toggle('hidden', isPass);
          eyeClosed.classList.toggle('hidden', !isPass);
        });
      }
      setupToggle('togglePassword', 'password', 'eyeOpen', 'eyeClosed');
      setupToggle('toggleConfirm', 'confirmPassword', 'eyeOpen2', 'eyeClosed2');

      function strength(p) {
        var s = 0;
        if (p.length >= 6) s++;
        if (p.length >= 10) s++;
        if (/[a-z]/.test(p) && /[A-Z]/.test(p)) s++;
        if (/\d/.test(p)) s++;
        if (/[^a-zA-Z0-9]/.test(p)) s++;
        return Math.min(4, s);
      }
      var pass = document.getElementById('password');
      var bar = document.getElementById('strengthBar');
      var text = document.getElementById('strengthText');
      var labels = ['', 'Weak', 'Fair', 'Good', 'Strong'];
      if (pass && bar && text) {
        pass.addEventListener('input', function() {
          var s = strength(pass.value);
          bar.className = 'strength-bar strength-' + s;
          text.textContent = pass.value ? 'Password strength: ' + labels[s] : 'Password strength';
        });
      }

      var form = document.getElementById('signupForm');
      var confirm = document.getElementById('confirmPassword');
      var matchText = document.getElementById('matchText');
      if (form && confirm && matchText) {
        form.addEventListener('submit', function(e) {
          if (pass.value !== confirm.value) {
            e.preventDefault();
            matchText.classList.remove('hidden');
            matchText.classList.add('text-red-400');
            matchText.textContent = 'Passwords do not match';
            return false;
          }
          matchText.classList.add('hidden');
        });
        confirm.addEventListener('input', function() {
          if (confirm.value && pass.value !== confirm.value) {
            matchText.classList.remove('hidden');
            matchText.classList.add('text-red-400');
            matchText.textContent = 'Passwords do not match';
          } else {
            matchText.classList.add('hidden');
          }
        });
      }
    })();
  </script>
</body>
</html> 
