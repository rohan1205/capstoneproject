<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign Up — BreachLens</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Sora', 'system-ui', 'sans-serif'] },
          animation: {
            'float': 'float 8s ease-in-out infinite',
            'float-slow': 'float 12s ease-in-out infinite reverse',
          },
          keyframes: {
            float: { '0%, 100%': { transform: 'translate(0, 0) scale(1)' }, '50%': { transform: 'translate(30px, -30px) scale(1.1)' } },
            floatS: { '0%, 100%': { transform: 'translate(0, 0)' }, '33%': { transform: 'translate(-20px, 20px)' }, '66%': { transform: 'translate(15px, -15px)' } },
          }
        }
      }
    }
  </script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
  <style>
    * { box-sizing: border-box; }
    .scene-3d { perspective: 1200px; }
    .card-3d {
      transform-style: preserve-3d;
      transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    }
    .card-3d:hover { transform: rotateY(4deg) rotateX(-2deg) translateZ(20px); }
    .card-3d-inner { transform: translateZ(40px); }
    .glass-card {
      backdrop-filter: blur(24px);
      -webkit-backdrop-filter: blur(24px);
      background: linear-gradient(135deg, rgba(255,255,255,.12) 0%, rgba(255,255,255,.04) 100%);
      border: 1px solid rgba(255,255,255,.18);
      box-shadow: 0 25px 50px -12px rgba(0,0,0,.4), inset 0 1px 0 rgba(255,255,255,.1);
    }
    .orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.5;
      animation: float 8s ease-in-out infinite;
    }
    .orb-1 { width: 400px; height: 400px; background: radial-gradient(circle, #8b5cf6 0%, transparent 70%); top: -10%; left: -10%; animation-delay: 0s; }
    .orb-2 { width: 350px; height: 350px; background: radial-gradient(circle, #6366f1 0%, transparent 70%); bottom: -5%; right: -5%; animation-delay: -3s; animation-direction: reverse; }
    .orb-3 { width: 200px; height: 200px; background: radial-gradient(circle, #a855f7 0%, transparent 70%); top: 30%; right: 25%; animation-delay: -5s; animation-duration: 10s; }
    .grid-bg {
      background-image: linear-gradient(rgba(255,255,255,.03) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.03) 1px, transparent 1px);
      background-size: 60px 60px;
    }
    .input-group { position: relative; }
    .input-group label {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255,255,255,.5);
      font-size: 0.9375rem;
      pointer-events: none;
      transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
    }
    .input-group input:focus ~ label,
    .input-group input:not(:placeholder-shown) ~ label {
      top: -12px;
      left: 12px;
      font-size: 0.7rem;
      color: #a78bfa;
      background: linear-gradient(180deg, #0c0a1a 50%, #0c0a1a 50%);
      padding: 0 8px;
      letter-spacing: 0.05em;
    }
    .input-group input::placeholder { color: transparent; }
    .input-group input:focus {
      box-shadow: 0 0 0 3px rgba(99,102,241,.25), 0 0 30px rgba(99,102,241,.1);
    }
    .glow-btn {
      background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
      background-size: 200% 200%;
      box-shadow: 0 0 30px rgba(99,102,241,.4), 0 10px 40px -10px rgba(139,92,246,.5), inset 0 1px 0 rgba(255,255,255,.2);
      transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
      position: relative;
      overflow: hidden;
    }
    .glow-btn::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, transparent, rgba(255,255,255,.15), transparent);
      transform: translateX(-100%);
      transition: transform 0.6s ease;
    }
    .glow-btn:hover {
      box-shadow: 0 0 50px rgba(139,92,246,.5), 0 15px 50px -10px rgba(139,92,246,.4);
      transform: translateY(-3px) scale(1.01);
      background-position: 100% 100%;
    }
    .glow-btn:hover::before { transform: translateX(100%); }
    .glow-btn:active { transform: translateY(0) scale(0.98); }
    .float-shape {
      position: absolute;
      border-radius: 24px;
      background: linear-gradient(135deg, rgba(255,255,255,.06) 0%, rgba(255,255,255,.02) 100%);
      border: 1px solid rgba(255,255,255,.08);
      backdrop-filter: blur(10px);
      animation: floatS 15s ease-in-out infinite;
    }
    .float-shape-1 { width: 100px; height: 100px; top: 10%; right: 8%; animation-delay: 0s; transform: rotate(-15deg); }
    .float-shape-2 { width: 70px; height: 70px; bottom: 15%; left: 10%; animation-delay: -5s; animation-duration: 18s; transform: rotate(25deg); }
    .float-shape-3 { width: 50px; height: 50px; top: 70%; right: 8%; animation-delay: -8s; animation-duration: 12s; transform: rotate(-45deg); }
    @keyframes floatS { 0%, 100% { transform: translate(0, 0) rotate(var(--r, 0deg)); } 33% { transform: translate(-15px, 20px) rotate(calc(var(--r, 0deg) + 10deg)); } 66% { transform: translate(20px, -10px) rotate(calc(var(--r, 0deg) - 5deg)); } }
    .strength-bar { transition: width 0.4s cubic-bezier(0.23, 1, 0.32, 1), background 0.3s ease; }
    .strength-0 { width: 0; background: transparent; }
    .strength-1 { width: 25%; background: linear-gradient(90deg, #ef4444, #f87171); }
    .strength-2 { width: 50%; background: linear-gradient(90deg, #f59e0b, #fbbf24); }
    .strength-3 { width: 75%; background: linear-gradient(90deg, #eab308, #a3e635); }
    .strength-4 { width: 100%; background: linear-gradient(90deg, #22c55e, #4ade80); }
    .error-enter { animation: errorSlide 0.4s cubic-bezier(0.23, 1, 0.32, 1); }
    @keyframes errorSlide { from { opacity: 0; transform: translateY(-10px) scale(0.95); } to { opacity: 1; transform: translateY(0) scale(1); } }
    .card-enter { animation: cardFade 0.8s cubic-bezier(0.23, 1, 0.32, 1) forwards; opacity: 0; }
    @keyframes cardFade { from { opacity: 0; transform: translateY(30px) scale(0.96) rotateX(-5deg); } to { opacity: 1; transform: translateY(0) scale(1) rotateX(0); } }
    .logo-icon-3d {
      transform: perspective(500px) rotateY(5deg);
      box-shadow: 0 20px 40px -10px rgba(139,92,246,.4);
      transition: transform 0.4s ease;
    }
    .logo-icon-3d:hover { transform: perspective(500px) rotateY(0deg) scale(1.05); }
  </style>
</head>
<body class="min-h-screen bg-[#05030d] grid-bg flex items-center justify-center p-4 py-10 font-sans overflow-hidden relative">
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>
    <div class="float-shape float-shape-1"></div>
    <div class="float-shape float-shape-2"></div>
    <div class="float-shape float-shape-3"></div>
  </div>

  <div class="scene-3d w-full max-w-md relative z-10">
    <div class="card-3d glass-card rounded-3xl p-8 sm:p-10 card-enter shadow-2xl">
      <div class="card-3d-inner">
        <div class="text-center mb-8">
          <div class="logo-icon-3d w-14 h-14 mx-auto mb-5 rounded-2xl bg-gradient-to-br from-indigo-500 via-purple-500 to-violet-600 flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/></svg>
          </div>
          <h1 class="text-3xl sm:text-4xl font-extrabold text-white tracking-tight">BreachLens</h1>
          <p class="text-white/50 mt-1 text-sm font-medium">Create your account — start in seconds</p>
        </div>

        <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
          <div class="mb-6 px-4 py-3 rounded-xl bg-red-500/15 border border-red-400/30 text-red-200 text-sm text-center error-enter backdrop-blur-sm" role="alert"><%= error %></div>
        <% } %>

        <form action="/signup" method="POST" id="signupForm" class="space-y-5">
          <div class="input-group">
            <input
              type="text"
              name="name"
              id="name"
              placeholder=" "
              required
              autocomplete="name"
              class="w-full px-4 py-3.5 rounded-2xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-300"
            />
            <label for="name">Full Name</label>
          </div>

          <div class="input-group">
            <input
              type="email"
              name="email"
              id="email"
              placeholder=" "
              required
              autocomplete="email"
              class="w-full px-4 py-3.5 rounded-2xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-300"
            />
            <label for="email">Email</label>
          </div>

          <div class="input-group relative">
            <input
              type="password"
              name="password"
              id="password"
              placeholder=" "
              required
              minlength="6"
              autocomplete="new-password"
              class="w-full px-4 py-3.5 pr-14 rounded-2xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-300"
            />
            <label for="password">Password</label>
            <button type="button" id="togglePassword" class="absolute right-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-indigo-300 focus:outline-none p-1.5 rounded-lg transition-all hover:bg-white/5" aria-label="Toggle password visibility">
              <svg id="eyeOpen" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
              <svg id="eyeClosed" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878a4.5 4.5 0 106.262 6.262M4.031 11.117A8.959 8.959 0 003 12c0 4.478 2.943 8.268 7 9.543 3.947-1.192 7.26-3.408 9.542-7.187m-1.746-2.117A9.97 9.97 0 0112 5c4.478 0 8.268 2.943 9.542 7-.575 1.83-1.35 3.535-2.242 5.084"/></svg>
            </button>
          </div>
          <div class="mt-1 px-1">
            <div class="h-2 w-full rounded-full overflow-hidden bg-white/10">
              <span id="strengthBar" class="strength-bar strength-0 block h-full rounded-full transition-all"></span>
            </div>
            <p id="strengthText" class="text-xs text-white/40 mt-1.5 font-medium">Password strength</p>
          </div>

          <div class="input-group relative">
            <input
              type="password"
              name="confirmPassword"
              id="confirmPassword"
              placeholder=" "
              required
              autocomplete="new-password"
              class="w-full px-4 py-3.5 pr-14 rounded-2xl bg-white/5 border border-white/10 text-white placeholder-transparent focus:border-indigo-400/60 focus:ring-2 focus:ring-indigo-400/20 outline-none transition-all duration-300"
            />
            <label for="confirmPassword">Confirm Password</label>
            <button type="button" id="toggleConfirm" class="absolute right-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-indigo-300 focus:outline-none p-1.5 rounded-lg transition-all hover:bg-white/5" aria-label="Toggle password visibility">
              <svg id="eyeOpen2" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
              <svg id="eyeClosed2" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878a4.5 4.5 0 106.262 6.262M4.031 11.117A8.959 8.959 0 003 12c0 4.478 2.943 8.268 7 9.543 3.947-1.192 7.26-3.408 9.542-7.187m-1.746-2.117A9.97 9.97 0 0112 5c4.478 0 8.268 2.943 9.542 7-.575 1.83-1.35 3.535-2.242 5.084"/></svg>
            </button>
          </div>
          <p id="matchText" class="text-xs text-red-400 hidden font-medium">Passwords must match</p>

          <button type="submit" class="glow-btn w-full py-4 rounded-2xl text-white font-semibold text-base">
            Create Account
          </button>
        </form>

        <div class="flex items-center gap-4 my-8">
          <span class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></span>
          <span class="text-white/40 text-xs font-medium">or sign up with</span>
          <span class="flex-1 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></span>
        </div>

        <a href="/auth/google" class="block group">
          <button type="button" class="w-full py-4 rounded-2xl border border-white/15 bg-white/5 text-white/90 font-medium text-sm flex items-center justify-center gap-3 hover:bg-white/10 hover:border-white/25 transition-all duration-300 group-hover:scale-[1.01] active:scale-[0.99]">
            <svg class="w-5 h-5" viewBox="0 0 48 48"><path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/><path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/><path fill="#FBBC05" d="M10.53 28.59a14.5 14.5 0 0 1 0-9.18l-7.98-6.19a24.06 24.06 0 0 0 0 21.56l7.98-6.19z"/><path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/></svg>
            Google
          </button>
        </a>

        <p class="text-center mt-8 text-white/50 text-sm">
          Already have an account? <a href="/login" class="text-indigo-300 hover:text-white font-semibold transition-colors underline-offset-2 hover:underline">Sign in</a>
        </p>
      </div>
    </div>
  </div>

  <script>
    (function() {
      function setupToggle(btnId, inputId, openId, closedId) {
        var toggle = document.getElementById(btnId);
        var input = document.getElementById(inputId);
        var eyeOpen = document.getElementById(openId);
        var eyeClosed = document.getElementById(closedId);
        if (!toggle || !input) return;
        toggle.addEventListener('click', function() {
          var isPass = input.type === 'password';
          input.type = isPass ? 'text' : 'password';
          eyeOpen.classList.toggle('hidden', isPass);
          eyeClosed.classList.toggle('hidden', !isPass);
        });
      }
      setupToggle('togglePassword', 'password', 'eyeOpen', 'eyeClosed');
      setupToggle('toggleConfirm', 'confirmPassword', 'eyeOpen2', 'eyeClosed2');

      function strength(p) {
        var s = 0;
        if (p.length >= 6) s++;
        if (p.length >= 10) s++;
        if (/[a-z]/.test(p) && /[A-Z]/.test(p)) s++;
        if (/\d/.test(p)) s++;
        if (/[^a-zA-Z0-9]/.test(p)) s++;
        return Math.min(4, s);
      }
      var pass = document.getElementById('password');
      var bar = document.getElementById('strengthBar');
      var text = document.getElementById('strengthText');
      var labels = ['', 'Weak', 'Fair', 'Good', 'Strong'];
      if (pass && bar && text) {
        pass.addEventListener('input', function() {
          var s = strength(pass.value);
          bar.className = 'strength-bar strength-' + s;
          text.textContent = pass.value ? 'Password strength: ' + labels[s] : 'Password strength';
        });
      }

      var form = document.getElementById('signupForm');
      var confirm = document.getElementById('confirmPassword');
      var matchText = document.getElementById('matchText');
      if (form && confirm && matchText) {
        form.addEventListener('submit', function(e) {
          if (pass.value !== confirm.value) {
            e.preventDefault();
            matchText.classList.remove('hidden');
            matchText.classList.add('text-red-400');
            matchText.textContent = 'Passwords do not match';
            return false;
          }
          matchText.classList.add('hidden');
        });
        confirm.addEventListener('input', function() {
          if (confirm.value && pass.value !== confirm.value) {
            matchText.classList.remove('hidden');
            matchText.classList.add('text-red-400');
            matchText.textContent = 'Passwords do not match';
          } else {
            matchText.classList.add('hidden');
          }
        });
      }
    })();
  </script>
</body>
</html>
